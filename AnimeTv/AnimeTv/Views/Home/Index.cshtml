@model HomeViewModel
@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-4" id="panel-vertical">
        <div class="p-2" style="height: 200px; background-color: yellow; box-shadow: 0px 0px 7px 5px #cccccc;"></div>
        <div class="d-flex flex-column" id="en-emision" style="box-shadow: 0px 0px 7px 5px #cccccc; margin-top: 8%;">

            <div class="p-2 border-bottom" style="background-color:white;"><h3 style="font-size: 25px; font-weight: 300;">Animes en emisión</h3></div>
            @foreach (var anime in Model.AnimesEnEmision)
            {
                <a asp-area="" asp-controller="Ficha" asp-action="Index" asp-route-id="@anime.mal_id" class="link-emision p-2" style="background-color: white;  "><i class="fa fa-play-circle" style="color:silver"></i>&nbsp;&nbsp;&nbsp;@anime.title</a>
            }
        </div>
    </div>
    <div class="col-sm-8" id="panel-central" style="margin-top: 3%;">
        <h2 class="subtitulo">Últimos capítulos agregados</h2>
        <div id="ultimos-episodios" class="row">
            @foreach (var episodio in Model.EpisodiosRecientes)
            {
                <div class="col-sm-3">
                    <div class="episodio card">
                        <div class="card-body" style="background-image: url(@episodio.entry.images.jpg.image_url);  background-size: cover; height: 200px;">
                            <span style="opacity:0; color: black; font-weight:bold;">@episodio.entry.title</span>
                        </div>
                    </div>
                </div>
            }
        </div>
        <h2 class="subtitulo" style="margin-top: 5%;">Próximos estrenos</h2>
        <div id="proximos-estrenos" class="row">
            @foreach (var anime in Model.ProximosAnimes)
            {
                <div class="col-sm-3">
                    <div class="proximos card">
                        <img src="@anime.images.jpg.large_image_url" class="card-img-top" alt="Cartel del anime">
                        <div class="card-body">
                            <a asp-area="" asp-controller="Ficha" asp-action="Index" asp-route-id="@anime.mal_id" style="color: black;">@anime.title</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

